<h1>Where can we find you?</h1>

<%= render layout: 'form' do |f| %>
  <div class="field">
    <%= f.label :twitter_username %><br />
    <%= f.text_field :twitter_username %>
  </div>
  <div class="field">
    <%= f.label :github_username %><br />
    <%= f.text_field :github_username %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>

  <%= link_to "modify partial", user_step_path(id: "social", some_variable: "world") %>

  <%= turbo_frame_tag "foo_turbo_frame" do %>
    <%= render partial: "partial", locals: { some_variable: "hello" } %>
  <% end %>

<% end %>